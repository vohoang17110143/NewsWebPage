@model NewsWebPage.Models.Post
@using NewsWebPage.Extensions
@using Microsoft.AspNetCore.Http

@{ ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<h2 class="text-info">Post</h2>
<header>
    <style>
        img {
            max-width: 100%;
            max-height: 100%;
            display: block;
        }

        .box {
            width: 900px;
        }

            .box.large {
                height: 300px;
            }

            .box.small {
                height: 100px;
            }
    </style>
</header>
<form method="post">
    <div class="p-5 border rounded row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Author" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ViewCount"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ViewCount" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Category"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Category.Name" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row box " style="text-align:center;margin-left:90px">
                <div class="col-8">
                    @Html.Raw(@Model.Content)
                </div>
            </div>
        </div>

        <br />
        <div class="form-group">
            <input hidden asp-for="Id" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>