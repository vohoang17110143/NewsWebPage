@model List<NewsWebPage.Models.Post>

@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />

<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@post.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%;" src="@post.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#a51313">@post.Description/</label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@post.Id"> View Details</a>
                    </div>
                </div>
            </div>
        </div>}
</div>