@{
    ViewData["Title"] = "ReadRSS";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ReadRSS";
}

<h2>Trang đọc tin tức</h2>

@using (Html.BeginForm())
{

    <input tabindex="-1" type="hidden" id="url" name="url" placeholder="Nhập địa chỉ đọc RSS"
           class="form-control" value="@ViewBag.url" style="min-width:100%" />

    <br />
    <input type="submit" id="btnSubmit" value="Đọc tin RSS" class="btn btn-danger" />

}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Link</th>
            <th>Description</th>
            <th>Publish Date</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.RSSFeed != null)
        {
            foreach (var item in ViewBag.RSSFeed)
            {
                <tr>
                    <td>
                    <td>@item.Title</td>
                    <td><a href="@item.Link">@item.Link</a></td>
                    <td>    @Html.Raw(@item.Description)</td>
                    <td>@item.PubDate</td>
                </tr>

            }

        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#url').val('https://vnexpress.net/rss/suc-khoe.rss');
            // $('#btnSubmit').trigger('click');

        })
    </script>
}