@model IEnumerable<NewsWebPage.Models.Author>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="row">
    <div class="col-12">
        <h2 style="text-align:center"> Danh sách tác giả</h2>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-9"></div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Thêm tác giả</a>
        </div>
    </div>
</div>
<br />

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Address)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Description)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />&nbsp;
                </td>
            </tr>
        }
    </table>
</div>